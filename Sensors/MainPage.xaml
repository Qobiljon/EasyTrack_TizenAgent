<?xml version="1.0" encoding="utf-8" ?>
<c:CirclePage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:c="clr-namespace:Tizen.Wearable.CircularUI.Forms;assembly=Tizen.Wearable.CircularUI.Forms" x:Class="Sensors.MainPage">
    <c:CirclePage.Content>
        <c:CircleScrollView HorizontalOptions="Fill" VerticalOptions="Fill">
            <StackLayout Orientation="Vertical" Padding="20" VerticalOptions="CenterAndExpand">
                <Label Text="EasyTrack&#x0a;Tizen Agent App" FontAttributes="Bold" TextColor="Orange" VerticalOptions="Start" HorizontalTextAlignment="Center" HorizontalOptions="CenterAndExpand" FontSize="Micro"/>
                <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                    <ImageButton x:Name="startDataColButton" IsEnabled="True" Clicked="startDataCollectionClick" Source="start.png" Margin="0,0,10,0"/>
                    <ImageButton x:Name="stopDataColButton" IsEnabled="False" Clicked="stopDataCollectionClick" Source="stop.png" Margin="10,0,10,0"/>
                    <ImageButton x:Name="reportDataColButton" IsEnabled="True" Clicked="reportDataCollection" Source="upload.png" Margin="10,0,0,0"/>
                </StackLayout>
                <Label x:Name="filesCountLabel" Text="FILES: 0" FontSize="Micro" TextColor="Orange" HorizontalOptions="Center"/>
                <Label x:Name="logLabel" MaxLines="30" Text="LOG" FontSize="Micro" TextColor="LightGreen" HorizontalOptions="Fill" VerticalOptions="Fill" BackgroundColor="#222" HorizontalTextAlignment="Center"/>
            </StackLayout>
        </c:CircleScrollView>
    </c:CirclePage.Content>
</c:CirclePage>